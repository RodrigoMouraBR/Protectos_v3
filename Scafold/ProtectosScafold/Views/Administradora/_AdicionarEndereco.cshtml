
@model Protectos.Application.ViewModels.Administradoras.AdministradoraEnderecoViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">Novo Endereço</h4>
</div>


@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.Hidden("AdministradoraId", (Guid?)ViewBag.AdministradoraId)


            @Html.Partial("_Endereco")

            @Html.HiddenFor(m => m.Id)
            <div class="modal-footer">
                <input type="submit" value="Adicionar" class="btn btn-success" />
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Fechar" />
            </div>
        </div>
    </div>
}