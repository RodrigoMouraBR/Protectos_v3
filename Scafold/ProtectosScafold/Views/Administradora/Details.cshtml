@model Protectos.Application.ViewModels.Administradoras.AdministradoraViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes da Administradora</h2>

<div class="container">
    <div class="row">
        <div class="">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h4 class="panel-title">@Model.RazaoSocial</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center"> <img src="@Url.Action("ObterImagemCliente", "Administradora", new { id = Model.Id })" alt="@Model.RazaoSocial" class="img-circle img-responsive"> </div>

                        <div class=" col-md-9 col-lg-9 ">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td>@Html.DisplayNameFor(model => model.Site)</td>
                                        <td><a href="mailto:@Model.Site">@Model.Site</a></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.RazaoSocial)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.RazaoSocial)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.NomeFantasia)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.NomeFantasia)
                                        </td>
                                    </tr>
                                    <tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.Cnpj)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Cnpj)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.InscricaoEstadual)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.InscricaoEstadual)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.InscricaoMunicipal)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.InscricaoMunicipal)
                                        </td>
                                    </tr>
                                    @*<tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.Site)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.Site)
                                        </td>
                                    </tr>*@
                                    @*<tr>
                                            <td>@Html.CheckBoxFor(model => model.Ativo)</td>
                                        </tr>*@
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <a href="@Url.Action("Edit", "Administradora", new {id = Model.Id})" data-modal="" class="btn btn-primary">
                        <span title="Editar" class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a href="@Url.Action("Delete", "Administradora", new { id = Model.Id })" data-modal="" class="btn btn-danger">
                        <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>