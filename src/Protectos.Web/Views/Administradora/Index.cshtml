@model IEnumerable<Protectos.Application.ViewModels.Administradoras.AdministradoraViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutContent.cshtml";
}


@section header
{
    <section class="content-header">
        <h1>
            Index administradora
            <small>Administradora configurada</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>
}

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box box-danger">
                <div class="box-header">
                    <h3 class="box-title">Simple Full Width Table</h3>                   

                </div>
                <!-- /.box-header -->
                <div class="box-body no-padding">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Task</th>
                                <th>Progress</th>
                                <th style="width: 40px">Label</th>
                            </tr>
                            <tr>
                                <td>1.</td>
                                <td>Update software</td>
                                <td>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-red">55%</span></td>
                            </tr>
                            <tr>
                                <td>2.</td>
                                <td>Clean database</td>
                                <td>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar progress-bar-yellow" style="width: 70%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-yellow">70%</span></td>
                            </tr>
                            <tr>
                                <td>3.</td>
                                <td>Cron job running</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-primary" style="width: 30%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-light-blue">30%</span></td>
                            </tr>
                            <tr>
                                <td>4.</td>
                                <td>Fix and squish bugs</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-success" style="width: 90%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-green">90%</span></td>
                            </tr>
                        </tbody>
                    </table>

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.RazaoSocial)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NomeFantasia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cnpj)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InscricaoEstadual)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InscricaoMunicipal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Site)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeFantasia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cnpj)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InscricaoEstadual)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InscricaoMunicipal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Site)
                                </td>
                                <td>
                                    <a href="@Url.Action("Editar", "Administradora", new {id = item.Id})" class="btn btn-warning btn-xs">
                                        <span title="Editar" class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                    <a href="@Url.Action("Detalhe", "Administradora", new {id = item.Id})" class="btn btn-primary btn-xs">
                                        <span title="Detalhes" class="glyphicon glyphicon-search"></span>
                                    </a>
                                    <a href="@Url.Action("Delete", "Administradora", new {id = item.Id})" class="btn btn-danger btn-xs">
                                        <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                                    </a>

                                </td>
                            </tr>
                        }
                    </table>



                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.box -->

    </div>
</div>
