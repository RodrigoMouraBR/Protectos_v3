@model Protectos.Application.ViewModels.Operadoras.OperadoraEmailViewModel

<div class="form-group">
    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.TipoEmail, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("Email.TipoEmail",
  EnumHelper.GetSelectList(typeof(Protectos.Application.Enums.ETipoEmailEmpresa)) ,
  "Selecione o Tipo de Email",
  new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TipoEmail, "", new { @class = "text-danger" })
    </div>
</div>


